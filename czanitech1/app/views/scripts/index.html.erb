<div class="row">
  <div class="col-lg-4 pull-left" style="padding-bottom:5px">
    <%= link_to 'Create a New Project', new_script_path, class: "btn btn-success myshadow" %>
  </div>

  <%= form_tag scripts_path, :method => 'get' do %>
    <div class="col-lg-3 pull-right" style="padding-bottom:5px">
      <div class="input-group myshadow">
        <%= text_field_tag :searchdescr, params[:searchdescr], placeholder: "Search Description", class: "form-control" %>
        <span class="input-group-btn">
          <button class="btn btn-warning" type="submit">Go</button>
        </span>
      </div>
    </div>
  <% end %>
  <%= form_tag scripts_path, :method => 'get' do %>
    <div class="col-lg-3 pull-right" style="padding-bottom:5px">
      <div class="input-group myshadow">
        <%= text_field_tag :searchproject, params[:searchproject], placeholder: "Search Project", class: "form-control" %>
        <span class="input-group-btn">
          <button class="btn btn-warning" type="submit">Go</button>
        </span>
      </div>
    </div>
  <% end %>
</div>
<br>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">My Projects</div>
  <!-- Table -->
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Project Name</th>
        <th>Name / Description</th>
        <th><center>Action</center></th>
      </tr>
    </thead>
    <tbody>
      <% @scripts.each do |script| %>
        <tr>
          <td width=30%>
            <% @projstatuses.each do |s| %>
              <div>
                <% if s.id == script.status %>
                  <b><span style="color:<%= s.color %>"><%= s.statusname %></span></b>
                <% end %>
              </div>
            <% end %>
            <% if current_user.try(:admin?) %>
              <%= script.user.email %>
              <br>
            <% end %>
            <%= script.created_at.strftime('%m/%d/%Y') %>
          </td>
          <td width=50%><b><%= script.project %></b><br>
            <%= script.notes %></td>
          <td width=20% style="text-align:center" >
            <div class="btn-group btn-group-sm">
              <%= link_to 'View', script_path(script), class: "btn btn-warning" %>              
              <%= link_to 'Edit Project', edit_script_path(script), class: "btn btn-success" %>
              <%= link_to ' Delete', script, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
