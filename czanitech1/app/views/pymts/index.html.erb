<%= link_to 'Add New Payment Status', new_pymt_path, class: "btn btn-success" %>
<br><br>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Payment Statuses</div>
  <!-- Table -->
  <table class="table table-striped table-bordered">

    <thead>
      <tr>
        <th>Show Order</th>
        <th>Payment Status Description</th>
        <th>Request Money from Customer</th>
        <th><center>Action</center></th>
      </tr>
    </thead>

    <tbody>
      <% @pymts.each do |pymt| %>
        <tr>
          <td width=10%><%= pymt.order_to_show %></td>
          <td width=50%><%= pymt.pymt_status %></td>
          <td width=20%>
            <% if pymt.is_requesting_pymt %>
              <center><i class="fa fa-thumbs-o-up"></i></center>
            <% end %>
          </td>
          <td width=20% style="text-align:center" >
            <div class="btn-group btn-group-sm">
              <%= link_to 'Edit', edit_pymt_path(pymt), class: "btn btn-success" %>
              <%= link_to ' Delete', pymt, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </div>
          </td>
        </tr>

      <% end %>
    </tbody>
  </table>

<br>
