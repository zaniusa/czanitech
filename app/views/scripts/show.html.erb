<p id="notice"><%= notice %></p>
<p>
  <strong><%= t('proj_view.notes') %></strong>
  <%= @script.notes %>
</p>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><%= t('proj_view.project') %> <strong><%= @script.project %></strong></div>
  <!-- Table -->
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%= t('proj_view.step_name') %></th>
        <th><%= t('projects.description') %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td width=30%><strong><%= t('proj_edit.step1') %></strong></td>
        <td width=80%><%= @script.step1 %></td>
      </tr>
      <tr>
        <td width=30%><strong><%= t('proj_edit.step2') %></strong></td>
        <td width=80%><%= @script.step2 %></td>
      </tr>
      <tr>
        <td width=30%><strong><%= t('proj_edit.step3') %></strong></td>
        <td width=80%><%= @script.step3 %></td>
      </tr>
      <tr>
        <td width=30%><strong><%= t('proj_edit.step4') %></strong></td>
        <td width=80%><%= @script.step4 %></td>
      </tr>
      <tr>
        <td width=30%><strong><%= t('proj_edit.step5') %></strong></td>
        <td width=80%><%= @script.step5 %></td>
      </tr>
    </tbody>
  </table>
</div>
<div class="btn-group btn-group-sm">
  <%= link_to (t('projects.edit')), edit_script_path(@script), class: "btn btn-success" %>
  <%= link_to (t('site.back')), scripts_path, class: "btn btn-default" %>
</div>

