<div class="row">
  <fieldset>
    <legend><i class="fa fa-file-text-o fa-2x"></i> Profile</legend>
  </fieldset>
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>
    <% if current_user.admin? %>
      <div class="checkbox">
        <label>Administrator
        <%= f.check_box :admin %></label>
      </div>
    <% end %>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :company, (t('register.company_name')) %><br>
        <%= f.text_field :company, :autofocus => true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :first_name, (t('register.first_name')) %><br>
        <%= f.text_field :first_name, class: "form-control", :required => true %>
      </div>
      <div class="form-group">
        <%= f.label :last_name, (t('register.last_name')) %><br>
        <%= f.text_field :last_name, class: "form-control", :required => true %>
      </div>
      <hr>
      <div class="form-group">
        <%= f.label :current_password, (t('register.enter_current_password')) %><br>
        <%= f.password_field :current_password, :autocomplete => "off", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit (t('register.update')), class: "btn btn-success" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :email, "Email" %><br>
        <%= f.email_field :email, class: "form-control", :required => true %>
      </div>
      <div class="form-group">
        <%= f.label :password, (t('register.password_leave_blank')) %>
        
        <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, (t('register.repeat_password')) %><br>
        <%= f.password_field :password_confirmation, :autocomplete => "off", class: "form-control" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>
    </div>
  <% end %>
  </br>
</div>
<fieldset>
  <legend><%= t('register.cancel_my_account') %></legend>
</fieldset>

<p><%= t('register.unhappy') %> <%= button_to (t('register.cancel_my_account')), registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-danger" %></p>

<%= link_to (t('site.back')), :back %>